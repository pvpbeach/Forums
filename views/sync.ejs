    <link rel="stylesheet" href="/css/global.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <script>
        function handleSync() {
            let count = 0;

            setInterval(() => {
                count++;
                if (count > 3) count = 1;

                document.getElementById('dot').innerText = '.'.repeat(count);
            }, 500);

            setTimeout(() => {
                location.reload();
            }, 6000);
        }
    </script>

    <link href="/css/flash.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pace/1.2.3/pace.min.js"></script>

</head>
<body onload="handleSync()">
<%- include('./partials/Navbar.ejs') %>

<div class="container error-data">
    <h1 class="title is-1">Please wait<span id="dot">.</span></h1>
    <p class="subtitle">
        We noticed you had updated your profile, so we're getting your website account up to speed.
        <br> This may take a bit.
    </p>
</div>
<%- include('./partials/Footer.ejs') %>

<script defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"></script>
</body>
</html>