<script defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"></script>
<script>
    let evalInput = document.getElementById('evalinput');
    evalInput.addEventListener('keypress', async event => {
        if (event.keyCode === 13) call();
    });
</script>
<script>
    function call() {
        let el = document.getElementById('evalinput');
        let el2 = document.getElementById('response');

        console.log(el.value);

        fetch('/panel/exec?toEval=' + el.value, {
            method: 'POST'
        }).then(r => r.text()).then(async r => {
            el2.innerText = r;
            console.log(r);
        });
    }
</script>
