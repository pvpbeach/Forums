<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Create a ticket &bull; PvPBeach Network</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.0/css/bulma.min.css">
    <link rel="stylesheet" href="/css/global.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <script>
        function createEditors() {
            for (const el in document.getElementsByClassName("editorinstance")) {
                ClassicEditor.create(document.getElementsByClassName("editorinstance")[el])
                    .catch(console.error);
            }
        }
    </script>

    <link href="/css/flash.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pace/1.2.3/pace.min.js"></script>
</head>
<body onload="createEditors();" style="height: 100vh;">
<%- include('../partials/Navbar.ejs') %>

<div class="container content">
    <h1 class="title is-1" style="color: #fff;">Create a ticket</h1>
    <hr>
    <% for (var shit in config) { %>
        <div class="column has-text-centered">
            <a href="/support/create/<%= shit %>" class="button is-block epicticketshit" style="height:85px;">
                <h1 style="color:#fff;" class="title is-3"><%= config[shit].name %></h1>
                <p style="color:#fff;" class="subtitle"><%= config[shit].subtitle %></p>
            </a>

        </div>
    <% } %>
</div>

<script defer src="https://use.fontawesome.com/releases/v6.1.1/js/all.js"></script>
<script src="https://cdn.ckeditor.com/ckeditor5/24.0.0/classic/ckeditor.js"></script>
</body>
</html>